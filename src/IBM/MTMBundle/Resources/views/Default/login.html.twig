    <body class="fade-in">
    	<!-- start Login box -->
    	<div class="container" id="login-block">
    		<div class="row">
			    <div class="col-sm-6 col-md-4 col-sm-offset-3 col-md-offset-4">
			    	 
			       <div class="login-box clearfix animated flipInY">
			       		<div class="page-icon animated bounceInDown">
			       			<img  src="{{ asset('images/user-icon.png', 'bankapp') }}" alt="Key icon" />
			       		</div>
			        	<div class="login-logo">
			        		<a href="#"><img src="{{ asset('images/fsm.png', 'bankapp') }}" style="max-width: 159px;" alt="FSM Bank" /></a>
			        	</div> 
			        	<hr />
			        	<div class="login-form">
			        		<!-- Start Error box -->
			        		{% if error %}
			        		<div class="alert alert-danger">
								  <button type="button" class="close" data-dismiss="alert"> &times;</button>
								  <h4>Error!</h4>
								   {{ error.message }}
							</div> <!-- End Error box -->
							{% endif %}
			        		<form name="login-form" class="login-form" action="{{ path('login_check') }}" method="post">
						   		 <input name="_username" id="username" type="text" placeholder="User name" class="input-field" required="true"/> 
						   		 <input name="_password" id="password" type="password"  placeholder="Password" class="input-field" required="true"/> 
					<!-- REDIRECT ON SUCCESS --><input type="hidden" name="_target_path" value="/" />	   
								 <button type="submit" class="btn btn-login">Login</button> 
							</form>	
							<div class="login-links"> 
					            <a href="{{ path('forgotpassword') }}">
					          	   Forgot password?
					            </a><br />
							</div>      		
